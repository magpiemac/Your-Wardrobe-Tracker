<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">Your Wardrobe Tracker</a>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <% if current_user %>
        <li><%= link_to "Hello, #{current_user.email}!", user_session_path(current_user) %></li>
        <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        <li><%= link_to "Capsules", capsules_path  %></li>
        <li><%= link_to "Wardrobe Items", wardrobe_items_path %></li>
        <li><%= link_to "Edit your Account", edit_user_registration_path  %></li>
        <%= form_tag(capsules_path, :method => "get", id: "search-form") do %>
           <li><%= text_field_tag :search, params[:search], placeholder: "Capsule Search" %></li>
           <%= submit_tag "Search"%>
          <% end %>
        <% else %>
        <li><%= link_to "Sign In", user_session_path  %></li>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
